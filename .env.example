############################
# Application
############################
APP_NAME=DeID-MVP
APP_ENV=dev
APP_VERSION=0.2.0
LOG_LEVEL=INFO
API_KEY=change-me
CORS_ALLOW_ORIGINS=http://localhost:8000,http://localhost:3000

############################
# Datastores
############################
# DSN used by the app to connect to Postgres
POSTGRES_DSN=postgresql+psycopg://deid:deidpass@postgres:5432/deid

# Redis URL for Celery broker/backend and caching
REDIS_URL=redis://redis:6379/0

############################
# De-identification
############################
# One of: mask | hash | redact
DEID_DEFAULT_POLICY=mask
# Salt used for hashing when DEID_DEFAULT_POLICY=hash
DEID_SALT=please-change-this-salt
# Maximum input text size (characters)
MAX_TEXT_SIZE=1000000
# Maximum HTTP request body size (bytes)
REQUEST_BODY_LIMIT=1000000

############################
# Docker Compose Postgres (container init)
############################
# These are used by the postgres container on initial startup
POSTGRES_USER=deid
POSTGRES_PASSWORD=deidpass
POSTGRES_DB=deid
